<div class="container">
    {{#channelNotExist}}
        <div class="alert alert-danger">
            Error: Der von Ihnen aufgerufene Link existiert nicht (mehr). Es existiert keine Zitatedatenbank zum Twitch-Kanal {{ channel }}.
        </div>
    {{/channelNotExist}}

    {{^channelNotExist}}
        <div class="card">
            <div class="card-header"><span class="font-weight-bold">Zitate von {{ streamerName }} </span></div>
            <div class="card-block noPadding">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="max-width: 30px">#ID</th>
                            <th>Wer?</th>
                            <th style="max-width: 135px">Wann?</th>
                            <th>Das Zitat</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#quotes}}
                        <tr>
                            <th style="max-width: 30px" scope="row">#{{quoteToChannelID}}</th>
                            <td>{{name}}</td>
                            <td style="max-width: 135px">{{showDate}}</td>
                            <td>{{quote}}</td>
                        </tr>
                    {{/quotes}}
                    </tbody>
                </table>

                <nav class="center">
                    <ul class="pagination">

                        <li class="page-item {{#isFirstPage}}disabled{{/isFirstPage}}" >
                            <a class="page-link" href="{{previousPageLink}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>

                        {{#pages}}
                                <li class="page-item {{#active}}active{{/active}}"><a class="page-link" href="{{link}}">{{number}}</a></li>
                        {{/pages}}

                        <li class="page-item {{#isLastPage}}disabled{{/isLastPage}}" >
                            <a class="page-link" href="{{nextPageLink}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    {{/channelNotExist}}
</div>


